    border-right-color: rgba(255, 255, 255, 0);
    border-top-color: rgba(255, 255, 255, 0);
    border-bottom-color: rgba(255, 255, 255, 0);
    -unity-font-style: bold;
}

#QuitButton {
    background-image: url("project://database/Assets/Sprites/MainMenu/QUIT.png?fileID=2800000&amp;guid=52c38b76312dca6498217f27ed6b464d&amp;type=3#QUIT");
    width: 300px;
